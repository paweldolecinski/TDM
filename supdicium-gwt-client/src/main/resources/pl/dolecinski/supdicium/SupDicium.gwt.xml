<module rename-to='supdicium'>
	<inherits name='com.google.web.bindery.event.Event' />

	<inherits name='com.google.gwt.user.User' />

	<inherits name='com.google.gwt.user.theme.clean.CleanResources' />
	<!-- <inherits name='com.google.gwt.user.theme.standard.StandardResources' 
		/> -->

	<inherits name="com.google.gwt.uibinder.GinUiBinder" /> <!-- GinUiBinder allows injecting widgets in UiBinder -->
	<inherits name='com.google.gwt.inject.Inject' />
	<inherits name='com.google.gwt.resources.Resources' />
	<inherits name="com.google.gwt.i18n.I18N" />
	<inherits name='com.google.gwt.storage.Storage' />
	<inherits name="com.google.gwt.logging.Logging" />
	<!-- Other module inherits -->
	<inherits name='com.gwtplatform.mvp.Mvp' />
	<inherits name='com.gwtplatform.dispatch.Dispatch' />
	<inherits name="name.pehl.piriti.json.JSON" />

	<inherits name="pl.dolecinski.subdicium.common.Common" />

	<define-property name="mobile.user.agent" values="mobilesafari, none" />
	<property-provider name="mobile.user.agent">
		<![CDATA[
		var ua = navigator.userAgent.toLowerCase();
		
		if (ua.indexOf("webkit") != -1 && ua.indexOf("mobile") != -1) {
			return "mobilesafari";
		}
		var isMobile;
		// Look for the m as a uGWTProJsonSerializerrl argument
		if (isMobile == null) {
			var args = location.search;
			var startMobile = args.indexOf("mobile");
			if (startMobile >= 0) {
				var mobile = args.substring(startMobile);
				var begin = mobile.indexOf("=") + 1;
				var end = mobile.indexOf("&");
				if (end == -1) {
					end = mobile.length;
				}
				isMobile = mobile.substring(begin, end);
			}
		}
		if (isMobile){
			return "mobilesafari";
		}
		return "none";
		]]>
	</property-provider>



	<entry-point class='pl.dolecinski.supdicium.client.SupDicium' />

	<!-- Specify the paths for translatable code -->
	<source path='client' />

	<define-configuration-property name='gin.ginjector'
		is-multi-valued='false' />
	<set-configuration-property name='gin.ginjector'
		value='pl.dolecinski.supdicium.client.gin.MainAppInjector' />

	<!-- To change the default logLevel -->
	<set-property name="gwt.logging.logLevel" value="FINE" />
	<!-- # To disable logging -->
	<set-property name="gwt.logging.enabled" value="TRUE" />

	<set-property name="gwt.logging.simpleRemoteHandler"
		value="DISABLED" />
	<set-property name="gwt.logging.firebugHandler" value="ENABLED" />
	<set-property name="gwt.logging.consoleHandler" value="ENABLED" />
	<set-property name="gwt.logging.developmentModeHandler"
		value="ENABLED" />
	<set-property name="gwt.logging.popupHandler" value="DISABLED" />
	<set-property name="gwt.logging.systemHandler" value="ENABLED" />

	<set-configuration-property name="UiBinder.useSafeHtmlTemplates"
		value="true" />

	<!-- <extend-property name="locale" values="en" /> -->

	<set-configuration-property name="CssResource.obfuscationPrefix"
		value="empty" />
	<set-configuration-property name="CssResource.style"
		value="pretty" />
	<set-property name="ClientBundle.enableInlining" value="false" />

	<set-property name="user.agent" value="safari" />

	<!-- safari ie6, ie7,ie8, opera, gecko1_8 -->
</module>
