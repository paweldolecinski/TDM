<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:sd="urn:import:com.tdm.client.app.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with field="res" type="com.tdm.client.resources.AppResources" />

	<g:HTMLPanel styleName="{res.mainCss.well}">
		<g:HTMLPanel styleName="{res.mainCss.row}" ui:field="headerPanel">
			<g:HTMLPanel styleName="{res.content.span7}">
				<h1 ui:field="problemCounter">
					You have 0 problems
				</h1>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{res.content.span5}">
				<form class="form-inline pull-right form-aside">
					<label>
						<span>
							Sort
						</span>
						<select id="sort" name="sort" class="span2">
							<option value="modified_at">
								by last opened
							</option>
							<option value="title">
								by title
							</option>
						</select>
					</label>
					<label>
						<span>
							Show
						</span>
						<select id="filter" name="show" class="span2">
							<option value="all">
								all problems
							</option>
							<option value="own">
								owned by me
							</option>
							<option value="shared">
								shared with me
							</option>
						</select>
					</label>
				</form>
			</g:HTMLPanel>
		</g:HTMLPanel>

		<g:HTMLPanel>
			<!-- <ul class="{res.mainCss.problemList} {res.mainCss.thumbnails}"> -->
			<b:Thumbnails ui:field="problemList" addStyleNames="{res.mainCss.problemList}">
				<b:Thumbnail size="3">
					<g:HTMLPanel styleName="{res.mainCss.create}">
						<g:Button ui:field="createButton"
							styleName="{res.mainCss.btn} {res.mainCss.btnPrimary} {res.mainCss.btnLarge}">
							New problem
						</g:Button>
					</g:HTMLPanel>
				</b:Thumbnail>
			</b:Thumbnails>
