<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	xmlns:bs="urn:import:com.github.gwtbootstrap.client.ui.base">

	<b:FluidRow>
		<b:Column size="8" addStyleNames="index-main">
			<bs:HtmlWidget tag="div" addStyleNames="index-left"
				ui:field="leftContentPanel" hideOn="PHONE" />
			<bs:HtmlWidget tag="div" addStyleNames="index-center"
				ui:field="mainContentPanel" />
		</b:Column>

		<b:Column size="4" addStyleNames="index-right" ui:field="rightContentPanel" />

	</b:FluidRow>

</ui:UiBinder>