<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:DialogBox modal="false">
		<g:caption>
			<b>New Problem</b>
		</g:caption>
		<g:HTMLPanel>
			<b:WellForm ui:field="form">
				<b:Fieldset>
					<b:ControlGroup ui:field="titleControlGroup">
						<b:ControlLabel for="titleBox">Problem name</b:ControlLabel>
						<b:Controls>
							<b:TextBox placeholder="Problem name…" ui:field="titleBox"
								focus="true" b:id="titleBox" />
							<b:HelpInline ui:field="titleError"></b:HelpInline>
						</b:Controls>
					</b:ControlGroup>
					<b:ControlGroup>
						<b:ControlLabel for="descBox">Description</b:ControlLabel>
						<b:TextArea placeholder="Description…" ui:field="descBox"
							b:id="descBox" />
						<b:HelpBlock>Description is optional.</b:HelpBlock>
					</b:ControlGroup>
					<b:SubmitButton addStyleNames="btn">Submit</b:SubmitButton>
				</b:Fieldset>
			</b:WellForm>
		</g:HTMLPanel>
	</g:DialogBox>
</ui:UiBinder> 
