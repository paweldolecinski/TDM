<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<ui:with type="com.tdm.client.resources.AppResources" field="res" />

	<b:Thumbnail size="3">
		<g:InlineHyperlink ui:field="titleImage" />
		<b:Caption>
			<h3 class="{res.mainCss.title}">
				<g:InlineHyperlink ui:field="title" />
			</h3>
			<b:Paragraph styleName="{res.mainCss.meta}">
				by
				<g:InlineLabel>
					Paweł Doleciński</g:InlineLabel>
				on
				<g:InlineLabel ui:field="creationDate" />
			</b:Paragraph>
			<b:Paragraph ui:field="description" styleName="{res.mainCss.description}" />
		</b:Caption>
	</b:Thumbnail>

</ui:UiBinder> 