<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:sd="urn:import:pl.dolecinski.supdicium.client.ui">

	<ui:with field="res"
		type="pl.dolecinski.supdicium.client.theme.base.MainCss" />

	<g:HTMLPanel styleName="{res.container}">
		<g:HTMLPanel styleName="{res.row}" ui:field="headerPanel">
			<g:HTMLPanel styleName="{res.span7}">
				<h1>
					You have X problems
				</h1>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{res.span5}">
				<form class="form-inline pull-right form-aside">
					<label>
						<span>
							Sort
						</span>
						<select id="sort" name="sort" class="span2">
							<option value="modified_at">
								by last opened
							</option>
							<option value="title">
								by title
							</option>
						</select>
					</label>
					<label>
						<span>
							Show
						</span>
						<select id="filter" name="show" class="span2">
							<option value="all">
								all problems
							</option>
							<option value="own">
								owned by me
							</option>
							<option value="shared">
								shared with me
							</option>
						</select>
					</label>
				</form>
			</g:HTMLPanel>
		</g:HTMLPanel>

		<g:HTMLPanel styleName="{res.container}">
			<ul ui:field="problemList" class="{res.problemList} {res.thumbnails}">

				<li class="{res.span4}">
					<g:HTMLPanel styleName="{res.problemListItem} {res.thumbnail} {res.create}">
						<a id="{res.create}" href="">
							<g:Button ui:field="createButton"
								styleName="{res.btn} {res.btnPrimary} {res.btnLarge}">
								New problem
							</g:Button>
						</a>
					</g:HTMLPanel>
				</li>
				
			</ul>
		</g:HTMLPanel>
		<g:HTMLPanel />
	</g:HTMLPanel>

</ui:UiBinder>