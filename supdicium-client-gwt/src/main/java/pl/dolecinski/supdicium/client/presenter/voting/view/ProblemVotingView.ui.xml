<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.compose {
			font-weight: bold;
			font-size: 1.3em;
			padding: 3px;
			background: #EDEFF4;
		}
	</ui:style>
	
	<ui:with type='pl.dolecinski.supdicium.client.bl.NameTokens'
		field='nameTokens' />
	<ui:with type="pl.dolecinski.supdicium.client.theme.base.MainCss"
		field="res" />

	<g:HTMLPanel>
		<g:FlowPanel addStyleNames="{style.compose}" width="100%"
			height="48px">
			<g:InlineHyperlink targetHistoryToken="{nameTokens.getProblem}">
				Create New</g:InlineHyperlink>
		</g:FlowPanel>
		<g:StackLayoutPanel unit="EM" height="100%" width="100%">
			<g:stack>
				<g:customHeader size="3">
					<g:HTMLPanel styleName="{res.stackLayoutPanelHeader}">
						Your Problems
							</g:HTMLPanel>
				</g:customHeader>
				<g:Tree height="100%" width="100%">
					<g:TreeItem text='Current' selected="true" />
					<g:TreeItem text='Inbox' />
					<g:TreeItem text='Starred' />
					<g:TreeItem text='Solved' />
					<g:TreeItem text='Drafts' />
					<g:TreeItem text='All' />
					<g:TreeItem text='Bin' />
				</g:Tree>
			</g:stack>
		</g:StackLayoutPanel>
	</g:HTMLPanel>

</ui:UiBinder> 