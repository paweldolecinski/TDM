<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:sd="urn:import:pl.dolecinski.supdicium.client.ui" xmlns:sdc="urn:import:pl.dolecinski.supdicium.client.ui.solution">

	<ui:style>
		.buttonPanel {
			padding: 8px 20px;
			border-top: 1px solid #ccc;
		}
		
		.commentList {
			width: 398px;
		}
		
		.DescriptionBlock_Content {
			display: table-cell;
			vertical-align: top;
			width: 10000px;
		}
		
		.DescriptionBlock_Image {
			float: left;
			margin-right: 10px;
		}
		
		.uiMenu {
			background-color: white;
			padding: 3px 0 4px;
			overflow-y: auto;
			border: 1px solid #777;
			border-bottom: 2px solid #293E6A;
			border-image: initial;
		}
		
		.uiStreamMessage {
			font-size: 13px;
			color: black;
			font-weight: normal;
			margin: 0 0 5px 0;
		}
		
		.solutionName {
			font-weight: bold;
			cursor: pointer;
			color: #3B5998;
			text-decoration: none;
		}
		
		.solutionDescription {
			padding-bottom: 3px;
		}
		
		.uiSolutionFooter {
			color: #999;
		}
		

		
		.solutionContent {
			padding: 12px 35px 14px 18px;
		}

	</ui:style>
	<ui:with type="pl.dolecinski.supdicium.client.theme.SDClientBundle"
		field="res" />

	<g:HTMLPanel styleName="{style.solutionContent}">
		<g:FlowPanel styleName="{style.DescriptionBlock_Image}">
			<g:Image resource="{res.idea}" />
		</g:FlowPanel>
		<g:HTMLPanel styleName="{style.DescriptionBlock_Content}">
			<g:HTMLPanel styleName="mainWrapper">
				<h6 class="{style.uiStreamMessage}">
					<g:HTMLPanel styleName="{style.solutionDescription} {style.solutionName}">
						<g:Hyperlink ui:field="solutionText" targetHistoryToken="" />
					</g:HTMLPanel>
				</h6>
				<h6 class="{style.uiStreamMessage}">
					<g:InlineLabel ui:field="solutionDescription" wordWrap="true" styleName="{style.solutionDescription}" />
				</h6>
				<span class="{style.uiSolutionFooter}">
					<span>
						<g:DateLabel ui:field="solutionDate" customFormat='EEE, d MMM yyyy HH:mm' />
					</span>
				</span>

				<g:FlowPanel styleName="{style.commentList}">
					<sd:WidgetList>
						<g:HTMLPanel>
							<sd:WidgetList ui:field="commentList" />
						</g:HTMLPanel>

						<sdc:AddCommentBox ui:field="newComment"/>
						
					</sd:WidgetList>
				</g:FlowPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 