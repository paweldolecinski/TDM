<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.tdm.client.resources.AppResources"
		field="res" />

	<g:HTMLPanel styleName="{res.getCommentWidgetCss.comment}">

		<g:InlineLabel ui:field="commentText" styleName="{res.getCommentWidgetCss.commentBody}" />

		<g:HTMLPanel styleName="{res.getCommentWidgetCss.commentActions}">
			<g:DateLabel ui:field="commentDate" customFormat='EEE, d MMM yyyy HH:mm' />
			Â·
			<span class="{res.getCommentWidgetCss.like}">
				<button class="{res.getCommentWidgetCss.asLink}" title="Like this comment">
					<g:InlineLabel>Like</g:InlineLabel>
				</button>
			</span>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 