<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.tdm.client.resources.AppResources" field="res" />

	<g:HTMLPanel
		styleName="{res.mainCss.problemListItem} {res.mainCss.thumbnail}">
		<g:InlineHyperlink ui:field="titleImage" />
		<g:HTMLPanel styleName="{res.mainCss.caption}">
			<h3 class="{res.mainCss.title}">
				<g:InlineHyperlink ui:field="title" />
			</h3>
			<p class="{res.mainCss.meta}">
				by
				<g:InlineLabel>
					Paweł Doleciński</g:InlineLabel>
				on
				<g:InlineLabel ui:field="creationDate" />
			</p>
			<p ui:field="description" class="{res.mainCss.description}" />
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 