<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.textBoxContainer {
		margin: 0 20px 0 0;
		}

		.metaComposerNewSolutionBox {
		background-color: #E7F1FF;
		width: 620px;
		}
		.metaComposerNewSolutionBoxShelf {
		border-top: 1px solid #CCC;
		height:
		30px;
		padding: 5px 5px 0px 0px;
		}

	</ui:style>

	<ui:with type="com.tdm.client.theme.base.MainCss"
		field="res" />

	<g:DisclosurePanel>
		<g:header>Add an Idea</g:header>
		<g:HTMLPanel styleName="{style.metaComposerNewSolutionBox}">
			<div>
				<b>
					<g:Label>One solution idea is...</g:Label>
				</b>
				<g:TextBox ui:field="solutionText" maxLength="255"
					visibleLength="75" />
			</div>
			<div>
				<g:Label>Additional details</g:Label>
				<g:HTMLPanel addStyleNames="{style.textBoxContainer}">
					<g:TextArea ui:field="solutionAdditionalText"
						characterWidth="55" visibleLines="3" />
				</g:HTMLPanel>
			</div>
			<g:HTMLPanel styleName="{style.metaComposerNewSolutionBoxShelf}">
				<g:HTMLPanel>
					<g:Button ui:field="addNewSolution">Add My Idea</g:Button>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:DisclosurePanel>

</ui:UiBinder> 