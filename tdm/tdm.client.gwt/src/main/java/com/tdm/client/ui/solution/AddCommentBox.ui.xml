<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.tdm.client.theme.base.AddCommentBoxCss"
		field="res" />

		<g:FlowPanel styleName="{res.commentBox}">
			<g:FlowPanel styleName="{res.container}">
				<g:FlowPanel styleName="{res.containerHead}">
					<g:FlowPanel>
						<g:TextArea ui:field="textArea" addStyleNames="{res.textArea}"
							visibleLines="1" />
					</g:FlowPanel>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
</ui:UiBinder> 